{
  "name": "unigig-backend",
  "version": "1.0.0",
  "description": "Backend for UniGig platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json && npm run copy-files",
    "copy-files": "cp -r src/config dist/ && cp -r prisma dist/",
    "start": "node dist/index.js",
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "@supabase/supabase-js": "^2.50.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "express-validator": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "stripe": "^14.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.4",
    "bcryptjs": "^3.0.2",
    "prisma": "^5.10.0",
    "ts-node-dev": "^2.0.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
